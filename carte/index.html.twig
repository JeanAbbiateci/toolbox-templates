		<script id="detail-template" type="text/x-handlebars-template">
		{% verbatim %}
		  	<div class="visualisator__header">
				<div class="visualisator__header__left">
					<img src="img/{{ terrorNomImage }}.jpg" alt="">
				</div>
				<div class="visualisator__header__right">
					<h1>{{ terrorNom }}</h1>
					<h2><span class="caret"><i class="fa fa-angle-right"></i></span><span class="maj">Âge au moment du départ:</span> {{ terrorAge }}</h2>
					<h2><span class="caret"><i class="fa fa-angle-right"></i></span><span class="maj">Nationalité:</span> {{ terrorNation }}</h2>
					<h2><span class="caret"><i class="fa fa-angle-right"></i></span><span class="maj">Statut:</span> {{ terrorLieu }}</h2>
				</div>
			</div>
			<div class="visualisator__body">
				<p> 
					{{{ terrorParcours }}}
				</p>
				{{#if terrorTexteLien}} <h1 style="color: #fff; font-size: 24px; margin-top: 40px;">A lire également:</h1><p><a href="{{ terrorLien }}" target="blank">{{ terrorTexteLien }}</a></p> {{/if}}
			</div>
		{% endverbatim %}
		</script>

		<script id="list-template" type="text/x-handlebars-template">
		{% verbatim %}
			{{#each terrors}}
			{{#if terrorTitre}} <h6 class="card-container__title">{{ terrorTitre }}</h6> {{/if}}
			{{#if terrorSousTitre}} <p>{{ terrorSousTitre }}</p> {{/if}}
		  	<div class="card detail-toggle" data-terrorid="{{ terrorId }}">
				<div class="card__header">
					<img src="img/{{ terrorNomImage }}.jpg" alt="">
				</div>
				<div class="card__body">
					<p>
						<span class="uppercase">{{ terrorNom }}</span><br>
						<span>Âge au moment du départ:</span> {{ terrorAge }}<br> 
						<span>Nationalité:</span> {{ terrorNation }}<br>
						<span>Statut:</span> {{ terrorLieu }}
					</p>
				</div>
			</div>
			{{/each}}
		{% endverbatim %}
		</script>
		
